@import 'util';
@import 'buttons';
@import 'layout-center';
@import 'header';
@import 'sidebar';
@import 'video';
@import 'code-copy';

html {
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}
body {
	font-family: proxima nova,proxima-nova,-apple-system,BlinkMacSystemFont,Segoe UI,open sans,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji important;
	font-size: 14px !important;
}
h1 {
	font-size: 30px !important;
}
.page {
	padding-left: calc(19rem + 30px);
}
#app .sidebar .sidebar-heading, #app .sidebar>.sidebar-links>li>a.sidebar-link {
	font-size: 14px !important;
}
// apply scrolling by default excluding firefox due to trigger issues
html.smooth-scroll {
	scroll-behavior: smooth;
}
#app .sidebar .sidebar-group.is-sub-group a.sidebar-link {
	display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
@supports (-moz-appearance: none) {
	html.smooth-scroll {
		scroll-behavior: auto;
	}
}
.navbar {
	border: 0 !important;
}
#app {
	.navbar {
		position: sticky;
	}

	.navbar .logo {
		width: 7rem;
		height: auto;
		margin-top: 8px;
		padding: 1px 3px 0px 0;
		vertical-align: top;
	}

	.site-name {
		display: none !important;
	}

	@media (min-width: $MQMobile) {
		.page-nav {
			padding: 2rem 0 0 0;
		}
	}
}
.custom-block.callout {
	background-color: lighten($badgeTipColor, 95%);
	padding: 0.1rem 1.5rem;
	border-color: $accentColor;
	border-left-width: 0.5rem;
	border-left-style: solid;
}

.custom-block.right {
	float: right;
	padding: 1em 0 1em 1em;
}

.custom-block.left {
	float: left;
	padding: 1em 1em 1em 0em;
}

:root {
	--accent-color: $accentColor;
	--text-color: $textColor;
	--border-color: $borderColor;
	--code-bg-color: $codeBgColor;
	--highlight-color: $highlightColor;
}
p {
	word-break: break-all;
}
th, td {
	text-align: left;
	vertical-align: top;
}
.theme-container {
	background: #fff;
}
.custom {
	max-width: 100% !important;
	background: #F3F3F3 !important;
	padding-top: 0 !important;
}
.home,.footer {
	max-width: 100% !important;
	padding: 0 !important;
}
table.comparison {
	table-layout: fixed;
}

table.comparison > tr, table.comparison > tr > th, table.comparison > tr > td {
	border: none;
}

table.comparison > tr > td:nth-child(1) {
	font-weight: bold;
}

table.comparison > tr > th:nth-child(1) {
	width: 25%;
}

table.comparison > tr > th {
	width: calc(((100% - 25%) / 2));
}

table.comparison table {
	margin: 0.4rem 0;
}

table.comparison table th, table.comparison table td {
	padding: 0.2em 0.5em;
}
